<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/add_cars_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.libertyhacks.mutual.liberty.care.activities.YourCarsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/LMBlue"
        android:elevation="4dp"
        style="@style/MyTheme"/>

    <TextView
        android:id="@+id/noCarsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addCarBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:text="You don't have any cars listed yet."
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/addCarBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_add" />

</RelativeLayout>
