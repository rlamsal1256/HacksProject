<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <android.support.v7.widget.RecyclerView
        android:layout_weight = "8.5"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <RelativeLayout
        android:layout_weight = "1.5"
        android:id="@+id/add_cars_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/MyTheme"
        tools:context="com.project.libertyhacks.mutual.liberty.care.activities.YourCarsActivity">

        <TextView
            android:id="@+id/noCarsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/addCarBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="76dp"
            android:text="@string/add_car"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/addCarBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/background_light"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_add" />

        <Button
            android:id="@+id/addAnotherCarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/add_another_car"
            android:background="@drawable/round_edges_button"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible"/>


    </RelativeLayout>
</LinearLayout>
