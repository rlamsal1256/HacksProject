<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.libertyhacks.mutual.liberty.care.activities.NotificationsActivity">

    <View
        android:id="@+id/notificationSeparator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="150dp"
        android:background="@color/LMGray" />

    <TextView
        android:id="@+id/oilChangeNotificationTxt"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"
        android:text="The oil health for Dad's Car is low. You may want to schedule an oil change soon."
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/oilChangeCircleImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/oilChangeNotificationTxt"
        android:layout_toLeftOf="@+id/oilChangeNotificationTxt"
        android:layout_toStartOf="@+id/oilChangeNotificationTxt"
        android:scaleType="fitCenter"
        android:tint="@color/red"
        app:srcCompat="@drawable/ic_circle" />

    <TextView
        android:id="@+id/oilChangeCircleLetterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/oilChangeCircleImg"
        android:layout_alignLeft="@+id/oilChangeCircleImg"
        android:layout_alignRight="@+id/oilChangeCircleImg"
        android:layout_alignTop="@+id/oilChangeCircleImg"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="O"
        android:textColor="@color/LMGray"
        android:textSize="40sp" />

    <Button
        android:id="@+id/scheduleAppointmentImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/oilChangeNotificationTxt"
        android:layout_alignRight="@+id/oilChangeNotificationTxt"
        android:layout_below="@+id/oilChangeCircleImg"
        android:backgroundTint="@color/LMBlue"
        android:text="Schedule Now"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:backgroundTint="@color/LMBlue"
        app:srcCompat="@drawable/ic_left_arrow" />

    <View
        android:id="@+id/notificationSeparator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="300dp"
        android:background="@color/LMGray" />

    <TextView
        android:id="@+id/licenseExpirationNotificationTxt"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="170dp"
        android:layout_toEndOf="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"
        android:text="The oil health for Dad's Car is low. You may want to schedule an oil change soon."
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/licenseExpirationCircleImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/licenseExpirationNotificationTxt"
        android:layout_toLeftOf="@+id/licenseExpirationNotificationTxt"
        android:layout_toStartOf="@+id/licenseExpirationNotificationTxt"
        android:scaleType="fitCenter"
        android:tint="@color/red"
        app:srcCompat="@drawable/ic_circle" />

    <TextView
        android:id="@+id/licenseExpirationCircleLetterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/licenseExpirationCircleImg"
        android:layout_alignLeft="@+id/licenseExpirationCircleImg"
        android:layout_alignRight="@+id/licenseExpirationCircleImg"
        android:layout_alignTop="@+id/licenseExpirationCircleImg"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="L"
        android:textColor="@color/LMGray"
        android:textSize="40sp" />

    <Button
        android:id="@+id/removeLicenseExpImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/licenseExpirationNotificationTxt"
        android:layout_alignRight="@+id/licenseExpirationNotificationTxt"
        android:layout_below="@+id/licenseExpirationCircleImg"
        android:backgroundTint="@color/LMBlue"
        android:text="Remove"
        android:textColor="@color/white" />

</RelativeLayout>
