<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.libertyhacks.mutual.liberty.care.activities.RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Register"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@color/LMBlue"
        android:textSize="36sp" />

    <Button
        android:id="@+id/libertyCustomersBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nonLibertyBtn"
        android:layout_alignStart="@+id/nonLibertyBtn"
        android:layout_below="@+id/nonLibertyBtn"
        android:layout_marginTop="58dp"
        android:background="@color/LMBlue"
        android:text="Liberty Mutual Customer"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/nonLibertyBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="@color/LMBlue"
        android:text="Non-Liberty Mutual Customers"
        android:textColor="@android:color/white" />
</RelativeLayout>
